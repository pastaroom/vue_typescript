{
  "rulesFile": "database.rules.json",
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9098
    },
    "functions": {
      "port": 5006
    },
    "firestore": {
      "port": 5005
    },
    "database": {
      "port": 9002
    },
    "hosting": {
      "port": 5019
    },
    "ui": {
      "enabled": false
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
